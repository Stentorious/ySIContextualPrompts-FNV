<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://qconsulting.ca/fo3/ModConfig5.0.xsd">
	<moduleName>ySI - Contextual Prompts</moduleName>
	<installSteps order="Explicit">
		<installStep name="ySI - Contextual Prompts">
			<optionalFileGroups order="Explicit">
				<group name="Main Files" type="SelectAtLeastOne">
					<plugins order="Explicit">
						<plugin name="Required">
							<description>ySI - Contextual Prompts core files.</description>
							<files>
								<folder source="Required" destination="" priority="0" />
							</files>
							<typeDescriptor>
								<type name="Recommended"/>
							</typeDescriptor>
						</plugin>
					</plugins>
				</group>
				<group name="Icon Add-on" type="SelectExactlyOne">
					<plugins order="Explicit">
						<plugin name="Default">
							<description>Install white versions of the ySI - Contextual Prompts add-on icons.&#13;&#10;
 - Door Icon (Interior)
 - Door Icon (Exterior)</description>
							<files>
								<folder source="Conditional\Icon Addon (Default)" destination="" priority="0" />
							</files>
							<typeDescriptor>
								<type name="Optional"/>
							</typeDescriptor>
						</plugin>
						<plugin name="Colorful">
							<description>Install colorful versions of the ySI - Contextual Prompts add-on icons.&#13;&#10;
 - Door Icon (Interior)
 - Door Icon (Exterior)</description>
							<files>
								<folder source="Conditional\Icon Addon (Color)" destination="" priority="0" />
							</files>
							<typeDescriptor>
								<type name="Optional"/>
							</typeDescriptor>
						</plugin>
					</plugins>
				</group>
			</optionalFileGroups>
		</installStep>
	</installSteps>
</config>